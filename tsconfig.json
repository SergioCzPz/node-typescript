{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["src/controllers/*"]
    },
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
